{
  "name": "archway-elite-analyzer",
  "productName": "Archway Elite Analyzer",
  "version": "1.0.0",
  "description": "Professional network analysis solution by EVMG Technologies",
  "main": "main.js",
  "homepage": "https://evmg.tech",
  "author": {
    "name": "EVMG Technologies",
    "email": "support@evmg.tech",
    "url": "https://evmg.tech"
  },
  "license": "Proprietary",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.evmg.archway",
    "productName": "Archway Elite Analyzer",
    "copyright": "Copyright Â© 2025 EVMG Technologies. All rights reserved.",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png",
      "category": "Network"
    }
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}

